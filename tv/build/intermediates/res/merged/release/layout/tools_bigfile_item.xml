<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tv="http://schemas.android.com/apk/res/com.boxmate.tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="@dimen/px972"
        android:layout_height="@dimen/px80"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/base_bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_marginLeft="@dimen/px22"
            android:background="@drawable/tools_apk_read_failure" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/px150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px22"
            android:maxLength="13"
            android:singleLine="true"
            android:text="@string/tools_apk_searching"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px28"
            android:textStyle="bold" />

        <reco.frame.tv.view.TvMarqueeText
            android:id="@+id/tmt_path"
            android:layout_width="@dimen/px410"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px62"
            android:textColor="@android:color/white"
            android:background="@drawable/base_bg_white"
            android:textSize="@dimen/px28"
            android:textStyle="bold"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" >

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px20"
                android:text="@string/tools_apk_searching"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px28"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <reco.frame.tv.view.TvSubButton
        android:id="@+id/tb_delete"
        android:layout_width="@dimen/px130"
        android:layout_height="@dimen/px80"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/ll_detail"
        android:background="@drawable/base_bg_white"
        android:text="@string/tools_apk_delete"
        android:textColor="@android:color/white"
        tv:cursorRes="@drawable/shape_rectangle_cursor"
        tv:boarder="@dimen/px2" />

</RelativeLayout><!-- From: file:/Users/reco/Desktop/wokpace/recotv/tv/src/main/res/layout/tools_bigfile_item.xml -->