<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res/com.boxmate.tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_bg_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AppDetail" >

    <LinearLayout
        android:layout_width="@dimen/px1626"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px128"
        android:orientation="horizontal" >

        <reco.frame.tv.view.TvImageView
            android:id="@+id/tiv_icon"
            style="@style/AppListImage"
            android:background="@drawable/loading_small"
             >
        </reco.frame.tv.view.TvImageView>

        <!-- ���瀛� -->

        <LinearLayout
            android:layout_width="@dimen/px300"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px46"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/app_detail_title_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px28" />

            <com.boxmate.tv.view.StarList
                android:id="@+id/app_detail_star_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:orientation="horizontal" >
            </com.boxmate.tv.view.StarList>

            <TextView
                android:id="@+id/app_detail_cat_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px28" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/px25"
                    android:layout_height="@dimen/px25"
                    android:background="@drawable/download_count" />

                <TextView
                    android:id="@+id/app_detail_download_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/px10"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px25" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/download_num"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px25" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/px400"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/developer"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px28" />

                <TextView
                    android:id="@+id/app_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/px20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px25" />
            </LinearLayout>

            <LinearLayout
                style="@style/AppDetailInfoList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/version"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px28" />

                <TextView
                    android:id="@+id/app_detail_version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/px20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px28" />
            </LinearLayout>

            <LinearLayout
                style="@style/AppDetailInfoList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/size"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px28" />

                <TextView
                    android:id="@+id/app_detail_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/px20"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px28" />
            </LinearLayout>

            <LinearLayout
                style="@style/AppDetailInfoList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/controller"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px28" />
                <!--
                <ImageView
                    android:id="@+id/app_detail_controller"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px54"
                    android:layout_marginLeft="@dimen/px20"
                    android:gravity="center_vertical" />
                -->

                <TextView
                    android:id="@+id/app_detail_controller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px20"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px28" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_sq_official"
                android:layout_width="@dimen/px156"
                android:layout_height="@dimen/px48"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/app_source_quality_c" />

            <ImageView
                android:id="@+id/iv_sq_novirus"
                android:layout_width="@dimen/px156"
                android:layout_height="@dimen/px48"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/app_source_quality_a" />

            <ImageView
                android:id="@+id/iv_sq_checked"
                android:layout_width="@dimen/px156"
                android:layout_height="@dimen/px48"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/app_source_quality_b" />
        </LinearLayout>
    </LinearLayout>

    <!-- 绾� -->

    <ImageView
        android:layout_width="@dimen/px1626"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px14"
        android:background="@drawable/shape_line" />

    <RelativeLayout
        android:layout_width="@dimen/px1644"
        android:layout_height="@dimen/px132"
        android:layout_marginTop="@dimen/px18"
        android:clipChildren="false" >

        <reco.frame.tv.view.TvProgressBar
            android:id="@+id/tpb_download"
            tv:style="RECT"
            android:layout_width="@dimen/px510"
            android:layout_height="@dimen/px110"
            android:layout_marginLeft="@dimen/px9"
            android:layout_marginTop="@dimen/px9"
            tv:backgroundColor="#508cd0"
            tv:progressStartColor="#4caf50" />
        <!-- 瀹�瑁� -->

        <reco.frame.tv.view.TvButton
            android:id="@+id/tb_install"
            android:layout_width="@dimen/px510"
            android:layout_height="@dimen/px110"
            android:layout_marginLeft="@dimen/px9"
            android:layout_marginTop="@dimen/px9"
            android:text="@string/button_install_now"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px32"
            tv:boarderInt="1"
            tv:cursorRes="@drawable/shape_rectangle_cursor"
            tv:scalable="false" >
        </reco.frame.tv.view.TvButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/px1652"
        android:layout_height="@dimen/px234"
        android:clipChildren="false" >

        <reco.frame.tv.view.TvRelativeLayout
            android:id="@+id/trl_desc"
            android:layout_width="@dimen/px1624"
            android:layout_height="@dimen/px206"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/px9"
            android:layout_marginRight="@dimen/px9"
            android:layout_marginTop="@dimen/px9"
            android:background="@color/transparent_white_20"
            android:focusable="true"
            tv:cursorRes="@drawable/shape_rectangle_cursor"
            tv:scalable="false" >

            <TextView
                android:id="@+id/desc_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="4"
                android:paddingBottom="@dimen/px26"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingTop="@dimen/px26"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px32" />
        </reco.frame.tv.view.TvRelativeLayout>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/sreen_shot_list"
        android:layout_width="@dimen/px1644"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/px134"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/image_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </RelativeLayout>
    </HorizontalScrollView>

