<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px1920"
    android:layout_height="fill_parent" >

   
    <com.boxmate.tv.view.FocusScaleButton
        android:tag="2-8"
        android:id="@+id/game_ad_1"
        style="@style/AdBlock"
        android:layout_marginLeft="@dimen/px96"
        android:layout_marginTop="@dimen/px50"
        android:background="@drawable/image_loading"
        />
    
    <com.boxmate.tv.view.FocusScaleButton
        android:tag="2-8"
        android:id="@+id/game_ad_2"
        style="@style/AdBlock"
        android:layout_toRightOf="@+id/game_ad_1"
        android:layout_alignTop="@+id/game_ad_1"
        android:layout_marginLeft="@dimen/px10"
        android:background="@drawable/image_loading"
         />
    
    
    <com.boxmate.tv.view.FocusScaleButton
        android:tag="2-8"
        android:id="@+id/game_ad_3"
        style="@style/AdBlock"
        android:layout_toRightOf="@+id/game_ad_2"
        android:layout_alignTop="@+id/game_ad_2"
        android:layout_marginLeft="@dimen/px10"
        android:background="@drawable/image_loading"
         />
    
    <com.boxmate.tv.view.FocusScaleButton
        android:tag="2-8"
        android:id="@+id/game_ad_4"
        style="@style/AdBlock"
        android:layout_toRightOf="@+id/game_ad_3"
        android:layout_alignTop="@+id/game_ad_3"
        android:layout_marginLeft="@dimen/px10"
        android:background="@drawable/image_loading"
         />
    
    <com.boxmate.tv.view.FocusScaleButton
        android:tag="2-8"
        android:id="@+id/game_ad_5"
        style="@style/AdBlock"
        android:layout_toRightOf="@+id/game_ad_4"
        android:layout_alignTop="@+id/game_ad_4"
        android:layout_marginLeft="@dimen/px10"
        android:background="@drawable/image_loading"
         />
    
    
    <com.boxmate.tv.view.FocusScaleButton
        android:tag="2-8"
        android:id="@+id/game_ad_6"
        style="@style/AdBlock"
        android:layout_toRightOf="@+id/game_ad_5"
        android:layout_alignTop="@+id/game_ad_5"
        android:layout_marginLeft="@dimen/px10"
        android:background="@drawable/image_loading"
         />
    
    
    <!-- 排行 -->
    <com.boxmate.tv.view.FocusScaleButton
        android:id="@+id/game_board"
        style="@style/CatBlock"
        android:layout_alignLeft="@+id/game_ad_1"
        android:layout_below="@+id/game_ad_1"
        android:background="@drawable/game_board"
        android:layout_marginTop="@dimen/px10"
        android:tag="2-3" />
    
    
 
    
    
    <!-- 最新 -->

    <com.boxmate.tv.view.FocusScaleButton
        android:id="@+id/game_new"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/game_board"
        android:layout_toRightOf="@+id/game_board"
        android:background="@drawable/game_new"
        android:tag="2-4"
        android:layout_marginLeft="@dimen/px10"
         />
    
 
   
    
    <!--操作方式 -->
    <com.boxmate.tv.view.FocusScaleButton
        android:id="@+id/game_control"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/game_new"
        android:layout_toRightOf="@+id/game_new"
        android:background="@drawable/game_control"
        android:tag="2-6"
        android:layout_marginLeft="@dimen/px10"
         />
    
       
    <!-- 动作冒险 -->

    <com.boxmate.tv.view.FocusScaleButton
        android:id="@+id/game_iq"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/game_control"
        android:layout_toRightOf="@+id/game_control"
        android:background="@drawable/game_iq"
        android:tag="2-5"
        android:layout_marginLeft="@dimen/px10"
         />

    
    <!-- 桌游 -->
    <com.boxmate.tv.view.FocusScaleButton
        android:id="@+id/game_table"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/game_iq"
        android:layout_toRightOf="@+id/game_iq"
        android:background="@drawable/game_table"
        android:tag="2-7"
        android:layout_marginLeft="@dimen/px10"
         />
  
    
    <!-- 更多 -->
    <com.boxmate.tv.view.FocusScaleButton
        android:id="@+id/game_cat"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/game_table"
        android:layout_toRightOf="@+id/game_table"
        android:background="@drawable/game_cat"
        android:tag="2-8"
        android:layout_marginLeft="@dimen/px10"
         />


   

</RelativeLayout><!-- From: file:/Users/reco/Desktop/wokpace/recotv/tv/src/main/res/layout/fragment_game.xml -->