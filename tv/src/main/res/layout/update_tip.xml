<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/px698"
        android:layout_height="@dimen/px176"
        android:background="#f0000000"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/px128"
            android:layout_height="@dimen/px128"
            android:layout_marginLeft="@dimen/px24"
            android:background="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px128" 
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/px24"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_tips"
                android:textSize="@dimen/px24"
                android:textColor="#ffffff"
                />
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px170"
                android:orientation="horizontal"
                android:id="@+id/icon_list"
                >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>