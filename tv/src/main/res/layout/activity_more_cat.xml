<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res/com.boxmate.tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_bg_blue" >

    <TextView
        android:id="@+id/app_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px216"
        android:layout_marginTop="@dimen/px98"
        android:text="@string/game_cat"
        android:textColor="#ffffff"
        android:textSize="@dimen/px44" />

    <!-- 妫���� -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_desk"
        style="@style/CatBlock"
        android:layout_marginLeft="@dimen/px384"
        android:layout_marginTop="@dimen/px324"
        android:background="@drawable/game_classify_desk"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

    <!-- ������ -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_iq"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/tb_desk"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/tb_desk"
        android:background="@drawable/game_classify_iq"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

    <!-- 妯℃�� -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_simulate"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/tb_iq"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/tb_iq"
        android:background="@drawable/game_classify_simulate"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

    <!-- ��ㄤ�� -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_action"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/tb_simulate"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/tb_simulate"
        android:background="@drawable/game_classify_action"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

    <!-- 浣���� -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_sports"
        style="@style/CatBlock"
        android:layout_alignLeft="@+id/tb_desk"
        android:layout_below="@+id/tb_desk"
        android:layout_marginTop="@dimen/px10"
        android:background="@drawable/game_classify_sports"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

    <!-- 缁���ョ����� -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_manage"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/tb_sports"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/tb_sports"
        android:background="@drawable/game_classify_manage"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

    <!-- 灏���婚��琛� -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_war"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/tb_manage"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/tb_manage"
        android:background="@drawable/game_classify_war"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

    <!-- 瑙���� -->

    <reco.frame.tv.view.TvButton
        android:id="@+id/tb_role"
        style="@style/CatBlock"
        android:layout_alignTop="@+id/tb_war"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/tb_war"
        android:background="@drawable/game_classify_role"
        tv:boarderBottomInt="21"
        tv:boarderLeftInt="10"
        tv:boarderRightInt="10"
        tv:boarderTopInt="1"
        tv:cursorRes="@drawable/cursor" />

